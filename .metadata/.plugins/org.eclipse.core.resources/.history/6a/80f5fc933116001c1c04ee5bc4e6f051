package org.calcolatrice;

class calcolo {

	public static void main(String[] args) {
		
		Calcolatrice addizione= new addizione();
		int risultato=addizione.calcola(20, 30);
        System.out.println("la somma è:" + risultato);
	
        Calcolatrice sottrazione= new sottrazione();
         risultato=sottrazione.calcola(50, 30);
        System.out.println("la sottrazione è:" + risultato);


        Calcolatrice moltiplicazione= new moltiplicazione();
         risultato=moltiplicazione.calcola(20, 30);
        System.out.println("la moltiplicazione è:" + risultato);


Calcolatrice divisione= new divisione();
risultato=divisione.calcola(50, 20);
System.out.println("la divisione è:" + risultato);

	}

}
